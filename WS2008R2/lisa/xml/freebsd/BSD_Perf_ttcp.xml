<config>
    <global>
        <logfileRootDir>C:\Lisa\TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>TCPing Test Run on WS2012</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>

        <!-- Optional testParams go here -->
    </global>

    <testSuites>
        <suite>
            <suiteName>TTCP</suiteName>
            <suiteTests>
                <suiteTest>ttcp</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>ttcp</testName>
            <testScript>setupscripts\BIS_Perf_ttcp.ps1</testScript>
            <!-- <files>tools\ttcp.c</files>  -->
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>True</noReboot>
            <testparams>
                <param>TC_COVERED=PERF-TTCP-01</param>
                <param>BUFFER_LENGTH=8192</param>
                <param>BUFFER_COUNT=655360</param>
                <param>TTCP_FILE=ttcp.c</param>
                <param>TTCP_SOURCE_DIR=Tools</param>
                <param>TARGET_IP=192.168.1.100</param>
            </testparams>
            <uploadFiles>
                <file>ttcp.log</file>
            </uploadFiles>
        </test>
    </testCases>

    <VMs>        
	    <vm>
            <hvServer>localhost</hvServer>
            <vmName>FreeBSD10-TEST-1</vmName>
            <os>FreeBSD</os>
            <ipv4></ipv4>
            <sshKey>rhel5_id_rsa.ppk</sshKey>
            <suite>TTCP</suite>
        </vm>
	    <vm>
            <role>NonSUT</role>
            <hvServer>localhost</hvServer>
            <vmName>FreeBSD10-TEST-2</vmName>
            <os>FreeBSD</os>
            <ipv4></ipv4>
            <sshKey>rhel5_id_rsa.ppk</sshKey>
        </vm>
    </VMs>

</config>
