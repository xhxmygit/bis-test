    <testCases>
        <test>
            <testName>VerifyLisModules</testName>
            <testScript>LIS_VerifyHyperVIC.sh</testScript>
            <files>remote-scripts/ica/LIS_VerifyHyperVIC.sh</files>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>True</noReboot>
            <testParams>
                <param>TC_COVERED=CORE-14</param>
                <param>HYPERV_MODULES=(hv_vmbus hv_storvsc hv_utils hid_hyperv hv_netvsc)</param>
            </testParams>
        </test>

        <test>
